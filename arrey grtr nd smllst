#include <stdio.h>

int main() {
    int a[10] = {4,3,4,5,6,7,8,5,3,2,2,4,5,6,7,}; 
    int n =10; 
    int i, max, min;

    
    max = a[0];
    min = a[0];

    
    for (i = 1; i < n; i++) {
        if (a[i] > max) {
            max = a[i];
        }
        if (a[i] < min) {
            min = a[i];
        }
    }

    
    printf("The largest number in the array is: %d\n", max);
    printf("The smallest number in the array is: %d\n", min);

    return 0;
}